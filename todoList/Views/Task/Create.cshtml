@model todoList.Models.TaskPriorityViewModel

@{
    ViewData["Title"] = "Create";
}

<h1>Dodaj nowe zadanie</h1>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Task.Name" class="control-label"></label>
                <input asp-for="Task.Name" class="form-control" />
                <span asp-validation-for="Task.Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Task.Description" class="control-label"></label>
                <input asp-for="Task.Description" class="form-control" />
                <span asp-validation-for="Task.Description" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Task.DateTime" class="control-label"></label>
                <input asp-for="Task.DateTime" class="form-control" />
                <span asp-validation-for="Task.DateTime" class="text-danger"></span>
            </div>
            <div class="form-group">
                 <label asp-for="Task.PriorityId" class="control-label"></label>
                 <select class="form-control" asp-for="Task.PriorityId" 
                    asp-items="@(new SelectList(Model.Priorities, nameof(Priority.PriorityId), nameof(Priority.Name)))">
                   <option>Wybierz priorytet zadania</option>
                </select>
            </div>
            <div class="form-group mt-1">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}

